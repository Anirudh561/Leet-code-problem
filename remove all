#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

void removeElement(int nums[], int n, int val) {
    int k = 0;
    for (int i = 0; i < n; i++) {
        if (nums[i] != val) {
            nums[k] = nums[i];  
            k++;
        }
    }
   

    for (int i = 0; i < k; i++) {
        printf("%d ", nums[i]);
    }
}

int main() {
    int n, val;
   
   
    scanf("%d", &n);
   
    int nums[n];
   

    for (int i = 0; i < n; i++) {
        scanf("%d", &nums[i]);
    }
   
    scanf("%d", &val);
   

    removeElement(nums, n, val);
   
    return 0;
}


